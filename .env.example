# AlgoTrade Scanner - Environment Variables
# Copy this file to .env and fill in the values

# Environment
ENVIRONMENT=production

# Database
DATABASE_URL=postgresql://algotrade:algotrade@localhost:5432/algotrade

# Redis
REDIS_URL=redis://localhost:6379/0

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Alpha Vantage API (fallback data source)
ALPHA_VANTAGE_KEY=your_alpha_vantage_api_key_here

# Sentry (error tracking)
SENTRY_DSN=your_sentry_dsn_here

# Trading Day Bypass (set to skip weekend/holiday checks)
# FORCE_RUN=true
# SKIP_TRADING_DAY_CHECK=true

# Optional: Override config values
# SCANNING_UNIVERSE=NIFTY500
# SCANNING_TIME=15:35
# MAX_WORKERS=8
